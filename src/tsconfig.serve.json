{
  "compilerOptions": {
    "outDir": "./build",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es2015",
    "types": [
      "node",
      "reflect-metadata"
    ],
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom",
      "es6"
    ],
    "paths": {
      "@isbit/main/managers": ["./app/main/managers"],
      "@isbit/main/ioc": ["./app/main/ioc"],
      "@isbit/main/services": ["./app/main/services"],
      "@isbit/main/events": ["./app/main/events"],
      "@isbit/main/database": ["./app/main/database"],
      "@isbit/shared": ["./app/shared"]
    }
  },
  "files": [
    "app/main/main.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
