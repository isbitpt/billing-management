{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/app",
    "baseUrl": "",
    "paths": {
      "@isbit/shared": ["../shared"],
      "@isbit/render/features/*": ["app/features/*"],
      "@isbit/render/store/*": ["app/store/*"],
      "@isbit/render/core/*": ["app/core/*"],
    },
    "types": [
      "node"
    ]
  },
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "include": [
    "**/*.d.ts"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
